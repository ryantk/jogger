<div class="panel panel-default panel-flat">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= glyphicon("camera") %> Photographs
      <span class="right">
        <%= link_to("View All", photographs_path) %>
      </span>
    </h3>
  </div>

  <div class="panel-body">
    <%= form_for(Photograph.new) do |f| %>
      <%= f.file_field(:file, id: "camera-button-input", accept: "image/*", capture: "camera") %>
      
      <a href="#" class="thumbnail" id="camera-thumbnail-link">
        <img id="camera-image-preview" src="http://placehold.it/350x150&text=Take+a+photo">
      </a>

      <div class="center">
        <a href="#" id="camera-button" class="btn btn-success btn-lg">
          <%= glyphicon("camera") %> Take Photo
        </a>
        <%= f.submit("Save", id: "camera-button-sumbit", class: "btn btn-primary btn-lg") %>
      </div>
    <% end %>
  </div>
</div>
