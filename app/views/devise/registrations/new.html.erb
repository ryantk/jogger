<div class="panel panel-default panel-flat">
  <div class="panel-heading">
    <h3 class="panel-title">Sign up to Jogger</h3>
  </div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

    <div class="panel-body">

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label(:email, class: "control-label col-md-2") %>
        <div class="col-md-10">
          <%= f.email_field(:email, :autofocus => true, class: "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label(:password, class: "control-label col-md-2") %>
        <div class="col-md-10">
          <%= f.password_field(:password, class: "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label(:password_confirmation, class: "control-label col-md-2") %>
        <div class="col-md-10">
          <%= f.password_field(:password_confirmation, class: "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label(:type, "Type of Account: ", class: "control-label col-md-2") %>
        <div class="col-md-10">
          <%= f.select(:type, Person.types, {}, class: "form-control") %>
        </div>
      </div>  

    </div>

    <div class="panel-footer">
      
      <%= f.submit("Sign up", class: "btn btn-primary") %>

    </div>

  <% end %>

</div>

<div class="panel panel-default panel-flat">
  <div class="panel-body">
    <%= render "devise/shared/links" %>
  </div>
</div>
