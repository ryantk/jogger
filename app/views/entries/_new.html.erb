<div class="panel panel-success panel-flat">
  <div class="panel-heading">
    <h3 class="panel-title">New Entry</h3>
  </div>
  <div class="panel-body">
    <%= form_for(JournalEntry.new, url: new_journal_entry_path(journal)) do |f| %>
      <div class="form-group">
        <%= f.text_area(:body, class: "form-control input-lg input-body") %>
      </div>

      <div class="form-gorup">
        <label>Add a Photo, Sound or Video</label>
        <div class="scrollable well">
            <%= render 'memories/choose', memories: current_person.memories, attachable: JournalEntry.new %>
        </div>
      </div>

      <div class="form-group form-inline">
        <%= f.label("Tags") %>
        <%= text_field_tag(:tags, "", class: "form-control") %> 
        <p class="help-block">Seperate your tags with a comma. e.g.: kids, friends, dog</p>
      </div>
      <div class="form-group">
        <%= f.hidden_field(:journal_id, value: journal.id) %>
        <%= f.submit("Post", class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>