<div class="panel panel-success panel-flat">
  <div class="panel-heading">
    <h3 class="panel-title">New Task</h3>
  </div>
  
  <%= form_for(task) do |f| %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label(:details, "Task Details") %>
        <%= f.text_area(:details, class: "form-control input-lg input-body") %>
        <p class="help-block">Describe what you need to do</p>
      </div>
      <div class="form-group">
        <%= f.label(:due) %>
        <%= f.datetime_select(:due, class: "form-control") %>
      </div>

      <div class="form-gorup">
        <label>Add a Photo, Sound or Video</label>
        
        <div class="scrollable well">
          <%= render 'memories/choose', memories: current_person.memories, attachable: task %>
        </div>
      </div>

      <div class="form-group form-inline">
        <%= f.label("Tags") %>
        <%= text_field_tag(:tags, "", class: "form-control") %> 
        <p class="help-block">Seperate your tags with a comma. e.g.: kids, friends, dog</p>
      </div>
    </div>
    <div class="panel-footer">
      <%= f.submit("Create Task", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>
